<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Crumblr", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <%= link_to "Home", root_path, class: "btn btn-primary" %>
          <%= link_to "Help",    '#', class: "btn btn-primary" %>

          <% if current_user.present? %>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
          <% else %>
            <%= link_to 'Sign in', new_user_session_path, class: "btn btn-primary" %> 
            <%= link_to 'Register Now!', new_user_registration_path, class: "btn btn-primary" %>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>