<%= form_for(@link) do |f| %>
	<ul>
		<% @link.errors.full_messages.each do |error| %>
		  <li><%= error %></li>
		<% end %>
	</ul>


	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title%>
	</div>
	<div class="field">
		<%= f.label "Job link url" %><br />
		<%= f.text_field :url %>
	</div>
	<div class="description">
		<%= f.label :description %><br />
		<%= f.text_area :description %><br />
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>